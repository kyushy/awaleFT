<UserControl x:Class="Awale.vue.WinPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Awale.vue"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0.0" Color="Orange" />
                    <GradientStop Offset="0.8" Color="Brown" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Grid.Background>
        
        <TextBlock Text="VICTOIRE" FontSize="32" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding Name}" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Retour à l'accueil" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Button_Click"/>
    </Grid>
</UserControl>
